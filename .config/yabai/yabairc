#!/usr/bin/env sh

# for this to work you must configure sudo such that
# it will be able to run the command without password
#
# see this wiki page for information:
#  - https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)#configure-scripting-addition

yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# .. more yabai startup stuff

# Default layout (can be bsp, stack or float)
yabai -m config layout bsp

# New window spawns to the right if vertical split, or bottom if horizontal split
yabai -m config window_placement second_child

# Padding set to 12px
yabai -m config top_padding 12
yabai -m config bottom_padding 12
yabai -m config left_padding 12
yabai -m config right_padding 12
yabai -m config window_gap 12

# Configure window borders and colors
yabai -m config window_border on
yabai -m config window_border_width 4
yabai -m config window_border_blur off # disable to fix window blur ghosting
yabai -m config active_window_border_color 0xFFC4A6F5 # tokyonight purple
yabai -m config normal_window_border_color 0x002E3440 # black
yabai -m config insert_feedback_color 0xff7793d1 # blue

# Set window opacity effects
yabai -m config window_opacity off
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.9
yabai -m config window_opacity_duration 0.15

# Center mouse on window with focus
# yabai -m config mouse_follows_focus on

# Modifier for clicking and dragging with mouse
yabai -m config mouse_modifier fn
# Set modifier + left-click drag to move window
yabai -m config mouse_action1 move
# Set modifier + right-click drag to resize window
yabai -m config mouse_action2 resize
# Enable window animations
# yabai -m config window_animation_duration 0.35

# When window is dropped in center of another window, swap them (on edges it will split it)
yabai -m mouse_drop_action swap

# Space labels
yabai -m space 1 --label "Browse"
yabai -m space 2 --label "Code"
yabai -m space 3 --label "School"
yabai -m space 4 --label "Social"
yabai -m space 5 --label "Media"
yabai -m space 6 --label "Misc"

# Browser
# yabai -m rule --add app="Edge" space="Browse"
# yabai -m rule --add app="Orion" space="Browse"
# yabai -m rule --add app="Min" space="Browse"
# yabai -m rule --add app="Chrome" space="Browse"
# yabai -m rule --add app="Safari" space="Browse"

# Code
yabai -m rule --add app="Visual Studio Code" space="Code"
yabai -m rule --add app="iTerm" space="Code"
yabai -m rule --add app="Alacritty" space="Code"
yabai -m rule --add app="WezTerm" space="Code"
yabai -m rule --add app="kitty" space="Code"

# School
yabai -m rule --add app="Microsoft OneNote" space="School"
yabai -m rule --add app="Microsoft Teams" space="School"
yabai -m rule --add app="Microsoft Word" space="School"
yabai -m rule --add app="Microsoft PowerPoint" space="School"
yabai -m rule --add app="Microsoft Excel" space="School"

# Social
yabai -m rule --add app="Discord" space="Social"
yabai -m rule --add app="Mail" space="Social"
yabai -m rule --add app="Microsoft Outlook" space="Social"
# yabai -m rule --add app="zoom.us" space="Social"
yabai -m rule --add app="Calendar" space="Misc"

# Media
yabai -m rule --add app="YT Music" space="Media"
yabai -m rule --add app="Spotify" space="Media"
yabai -m rule --add app="Music" space="Media"
yabai -m rule --add app="Podcasts" space="Media"

# Misc
# yabai -m rule --add app="App Store" space="Misc"

# Apps to not manage (ignore)
yabai -m rule --add label="Finder" app="^Finder$" title="^(Co(py|nnect)|Move|Info|Pref|Finder Settings|Go to Folder)$" manage=off
yabai -m rule --add label="Safari" app="^Safari$" title="^(General|(Tab|Password|Website|Extension)s|AutoFill|Se(arch|curity)|Privacy|Advanced)$" manage=off
yabai -m rule --add label="Calendar" app="^Calendar$" title="^(General|(Account|Alert)s|Advanced)$" manage=off
yabai -m rule --add label="Software Update" title="Software Update" manage=off
yabai -m rule --add label="About This Mac" app="^System Information$" manage=off
yabai -m rule --add label="Mail" app="^Mail$" title="^(General|(Account|Fonts & Color|Signature|Reule|Extension)s|Junk Mail|Viewing|Composing|Privacy)$" manage=off
yabai -m rule --add label="Orion" app="^Orion$" title="^(General|Appearance|Browsing|Sync|Passwords|Privacy|Search|Websites|Advanced)$" manage=off
yabai -m rule --add label="Discord Updater" app="^Discord$" title="Discord Updater" manage=off
yabai -m rule --add label="Microsoft Teams" app="^Microsoft Teams$" title="Loading Microsoft Teams" manage=off
yabai -m rule --add label="Books" app="^Books$" title="^(General|Reading|Playback|Advanced)$" manage=off
yabai -m rule --add label="1Password Settings" app="^1Password$" title="Settings" manage=off
yabai -m rule --add label="Arc Settings" app="^Arc$" title="^(Joshua|General|Shortcuts|Little Arc|Advanced)$" manage=off
yabai -m rule --add label="Arc PiP" app="^Arc$" title="^$" mouse_follows_focus=off
yabai -m rule --add label="Little Arc" app="^Arc$" title="^Space 1$" manage=off
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Dictionary$" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="^Raycast$" manage=off
yabai -m rule --add app="^App Store$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add app="^Simulator$" manage=off
yabai -m rule --add app="^Installer$" manage=off
yabai -m rule --add app="^Digital Color Meter$" manage=off
yabai -m rule --add app="^Gifski$" manage=off
yabai -m rule --add app="^Archive Utility$" manage=off
yabai -m rule --add app="^QuickTime Player$" manage=off
yabai -m rule --add app="^Photo Booth$" manage=off
yabai -m rule --add app="^JetBrains Toolbox$" manage=off
yabai -m rule --add app="^LinearMouse$" manage=off

# Make all non-resizeable windows float (#1317)
# yabai -m signal --add event=window_created action='yabai -m query --windows --window $YABAI_WINDOW_ID | jq -er ".\"can-resize\" or .\"is-floating\"" || yabai -m window $YABAI_WINDOW_ID --toggle float'
